.dayly-weather {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 30rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  opacity: 0.75;
}

.dayly-weather:last-child {
  border: none;
}

.dayly-weather .week {
  font-size: 45rpx;
  line-height: 63rpx;
}

.dayly-weather .date {
  font-size: 30rpx;
  line-height: 42rpx;
}

.dayly-weather .temp-icon {
  width: 90rpx;
  height: 90rpx;
}