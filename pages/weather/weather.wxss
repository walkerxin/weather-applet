.temperature {
  text-align: center;
  font-size: 200rpx;
  /* 行高通常选为字号的 1.4 倍 */
  line-height: 280rpx;
  opacity: 0.8;
}

.desc {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}

.weather-wrapper {
  width: 750rpx;
  padding: 200rpx 0 224rpx;
  position: relative;
}

image {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}